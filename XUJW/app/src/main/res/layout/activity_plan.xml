<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layout2"
        android:visibility="gone"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/bt"
            android:orientation="horizontal">

            <ImageView

                android:id="@+id/back21_layout1"
                android:onClick="onClick"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/backtome2" />

            <TextView
                android:layout_marginTop="20dp"
                android:onClick="onClick"
                android:id="@+id/back22_layout1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="我"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="反馈与帮助"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />


        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="联系我们："
            android:gravity="bottom"
            android:layout_marginLeft="50dp"
            android:textColor="#727697"
            android:textSize="25sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="2405491487"
            android:gravity="center_horizontal"
            android:textColor="#2c3bbc"
            android:textSize="25sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:onClick="onClick"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@drawable/bt"
            android:orientation="horizontal">

            <ImageView
                android:onClick="onClick"
                android:id="@+id/back31_layout1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/backtome2" />

            <TextView
                android:layout_marginTop="20dp"
                android:onClick="onClick"
                android:id="@+id/back32_layout1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="我"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:gravity="center"
                android:text="关于我们"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />


        </LinearLayout>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="西邮移动应用开发实验室"
            android:gravity="center"
            android:textColor="#2c3bbc"
            android:textSize="25sp"/>

    </LinearLayout>

</LinearLayout>